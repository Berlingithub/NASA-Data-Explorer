{
  "$schema": "https://openapi.vercel.sh/vercel.json",


  "builds": [
    {
     
      "src": "server/index.js",
      "use": "@vercel/node"
    },
    {    "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }  
    }
  ],

  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/server/index.js"  
    },
    {
      "source": "/(.*)",                
      "destination": "/dist/index.html"
    }
  ]
}
